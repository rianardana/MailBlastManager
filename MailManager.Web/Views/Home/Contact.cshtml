    <title>Info Kontak</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
            align-items: center;
        }

        .card-container {
            display: flex;
            gap: 20px;
            justify-content: center;
        }

        .card {
            margin-top: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 350px; /* Ukuran kartu */
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: translateY(-10px);
            }

            .card img {
                width: 100px;
                height: 100px;
                border-radius: 50%;
                object-fit: cover;
                margin-bottom: 15px;
            }

        .card-name {
            font-size: 20px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .card-title {
            font-size: 16px;
            color: #777;
            margin-bottom: 10px;
        }

        .card-info {
            font-size: 14px;
            color: #555;
            margin-bottom: 8px;
        }

            .card-info a {
                text-decoration: none;
                color: #4CAF50;
            }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .card-container {
                flex-direction: column;
                gap: 15px;
            }
        }
    </style>
</head>
